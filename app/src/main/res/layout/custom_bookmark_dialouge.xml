<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:padding="16dp"
    >

    <TextView
        android:padding="2dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Set Custom Bookmark"
        android:textColor="#fff"
        />

    <RelativeLayout
        android:id="@+id/rl_sora_item"
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:background="@color/colorPrimary"
        android:padding="15dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/choose_surat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Choose Surat Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#fff"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/choose_juz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Choose Juz Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#fff"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/choose_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Custom Page no"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_surat_or_juz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="page 7"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#fff"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/pageno_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_txt"
                android:hint="Enter Pageno# 1 - 303"
                android:inputType="number"
                android:maxLength="3"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:visibility="gone" />

        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Set title for bookmark"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/title_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_txt"
            android:inputType="textPersonName"
            android:maxHeight="65dip"
            android:maxLength="50"
            android:minHeight="55dip"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button
            android:layout_marginRight="10dp"
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:text="CANCEL"
            android:textColor="#fff" />
        <Button
            android:id="@+id/save_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:text="SAVE"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>